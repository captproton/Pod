<% form_for @document, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

<p>
	<%= f.label :published_on %><br />
	<%= f.date_select(:published_on, :order => [:month, :day, :year ]) %>
</p>
 <p>
     <%= f.file_field :attachment %>  
 </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
