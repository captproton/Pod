<h1>Login</h1>

<% form_for @user_session, :url => user_session_path,  :class => "new_user" do |f| %>
<div class="box" id="box-users-login">
  <span class="top">Login</span>
  <p class="label"><label for="user_login">Username</label></p>
  <p><%= f.text_field :login, :style => "width:30%" %></p>
  <p class="label"><label for="password">Password</label></p>

  <p><%= f.password_field :password, :style => "width:30%" %></p>
<p>  <%= f.check_box :remember_me %><%= f.label :remember_me %>
</p>
  <p><%= f.submit "Login" %>&nbsp;<%= link_to 'Cancel', root_path %>
  </p>
<% end %>

<%= javascript_tag "$('user_login').focus();" %>